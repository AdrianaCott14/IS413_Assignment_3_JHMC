
@{
    ViewBag.Title = "Your Movies";
}

@model IEnumerable<movies.Models.AppResponse>

<div class="container">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Category</th>
                <th>Title</th>
                <th>Year</th>
                <th>Director</th>
                <th>Rating</th>
                <th>Edited?</th>
                <th>Lent To?</th>
                <th>Notes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (movies.Models.AppResponse x in Model)
            {
                @if (x.Title != "Independence Day")
                {
                    <tr>
                        <td>@x.Category</td>
                        <td>@x.Title</td>
                        <td>@x.Year</td>
                        <td>@x.Director</td>
                        <td>@x.Rating</td>
                        @if (x.Edited == true)
                        {
                            <td>Yes</td>
                        }
                        else
                        {
                            <td>No</td>
                        }
                        <td>@x.LentTo</td>
                        <td>@x.Notes</td>
                    </tr>   
                }
            }
        </tbody>
    </table>
</div>