
@{
    ViewBag.Title = "Your Movies";
}

@model IEnumerable<AppResponse>

<div class="container">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Category</th>
                <th>Title</th>
                <th>Year</th>
                <th>Director</th>
                <th>Rating</th>
                <th>Edited?</th>
                <th>Lent To?</th>
                <th>Notes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                @if (x.Title != "Independence Day")
                {
            <tr>
                <td>@x.Category</td>
                <td>@x.Title</td>
                <td>@x.Year</td>
                <td>@x.Director</td>
                <td>@x.Rating</td>
                @if (x.Edited == true)
                {
                    <td>Yes</td>
                }
                else
                {
                    <td>No</td>
                }
                <td>@x.LentTo</td>
                <td>@x.Notes</td>
                <td>
                    <form asp-action="removeMovie" method="post" asp-controller="Home">
                        <button class="btn btn-sm btn-danger" type="submit">Delete</button>
                        <input type="hidden" value="@x.MovieID" name="movieId" />
                    </form>
                </td>
                <td>
                    <form asp-action="editMovieForm" method="post" asp-controller="Home">
                        <button class="btn btn-sm btn-secondary" type="submit">Edit</button>
                        <input type="hidden" value="@x.MovieID" name="movieId" />
                    </form>
                </td>
            </tr>   
                }
            }
        </tbody>
    </table>
</div>